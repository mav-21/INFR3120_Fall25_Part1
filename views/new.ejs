<h2>Create New Listing</h2> <!-- form page heading -->

<form method="post" action="/items"> <!-- POST to /items creates new item -->
  <p> <!-- field wrapper -->
    <label for="name">Name</label> <!-- label for name -->
    <input id="name" name="name" required> <!-- text input, required -->
  </p> <!-- end field -->

  <p> <!-- field -->
    <label for="desc">Description</label> <!-- label for description -->
    <input id="desc" name="desc" required> <!-- text input for description -->
  </p> <!-- end field -->

  <p> <!-- field -->
    <label for="date">Date</label> <!-- label for date -->
    <input id="date" type="date" name="date" required> <!-- date input -->
  </p> <!-- end field -->

  <p> <!-- field -->
    <label for="place">Location</label> <!-- label for location -->
    <input id="place" name="place" required> <!-- text input for location -->
  </p> <!-- end field -->

  <p> <!-- field -->
    <label for="type">Type</label> <!-- label for type -->
    <select id="type" name="type"> <!-- dropdown for Lost/Found -->
      <option>Lost</option> <!-- option value Lost -->
      <option>Found</option> <!-- option value Found -->
    </select> <!-- end select -->
  </p> <!-- end field -->

  <button type="submit">Save</button> <!-- submit button to create item -->
  <a href="/" class="cancel-link">Cancel</a> <!-- link back without saving -->
</form> <!-- end form -->
