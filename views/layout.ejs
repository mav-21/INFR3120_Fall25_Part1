<!DOCTYPE html> <!-- standard HTML5 doctype -->
<html lang="en"> <!-- set page language for accessibility/SEO -->
<head> <!-- document head metadata -->
  <meta charset="UTF-8"> <!-- character encoding -->
  <meta name="viewport" content="width=device-width, initial-scale=1"> <!-- responsive scaling on mobile -->
  <title>Lost &amp; Found Hub</title> <!-- site title shown in browser tab -->
  <link rel="stylesheet" href="/css/style.css"> <!-- link to your public CSS file -->
</head> <!-- end head -->
<body> <!-- page body starts -->

  <header> <!-- simple top bar with flex layout -->
    <img src="/img/project-logo.png" alt="Team Logo" style="height:40px;"> <!-- team logo image (put project-logo.png in /public/img) -->
    <h1>Lost &amp; Found Hub</h1> <!-- site name next to logo -->
    <nav>
  <% if (!session || !session.user) { %> <!-- user is NOT logged in -->
    <a href="/login">Login</a> <!-- link to login page -->
    <a href="/register">Register</a> <!-- link to register page -->
  <% } else { %> <!-- user IS logged in -->
    <a href="/">Home</a> <!-- normal site links only visible when logged in -->
    <a href="/items">All Listings</a>
    <a href="/items/new">Create Listing</a>
    <a href="/logout">Logout</a> <!-- logout link replaces login/register -->
  <% } %>
</nav> <!-- end nav -->

  </header> <!-- end header -->

  <main> <!-- main content area with padding -->
    <%- body %>
  </main> <!-- end main -->


</body> <!-- end body -->
</html> <!-- end html -->
