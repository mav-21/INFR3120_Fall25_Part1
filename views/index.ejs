<section class="hero"> <!-- hero box for quick intro -->
  <h2>Find or report lost items on campus</h2> <!-- hero title -->
  <p>Click the button below to create a new listing.</p> <!-- short helper text -->
  <p>
    <a href="/items/new" class="btn">Create New Listing</a>
  </p>
</section> <!-- end hero -->

<h3>Active Listings</h3> <!-- heading above table -->

<table> <!-- simple full-width table -->
  <thead> <!-- table header -->
    <tr> <!-- header row -->
      <th>Name</th> <!-- item name column -->
      <th>Description</th> <!-- item description column -->
      <th>Date</th> <!-- date item was lost/found -->
      <th>Location</th> <!-- place where it was lost/found -->
      <th>Type</th> <!-- Lost or Found -->
      <th>Actions</th> <!-- edit/delete buttons -->
    </tr> <!-- end header row -->
  </thead> <!-- end thead -->

  <tbody> <!-- table body with data rows -->
    <% items.forEach(i => { %> <!-- EJS loop over items array passed from app.js -->
      <tr> <!-- data row for each item -->
        <td><%= i.name %></td> <!-- display item name -->
        <td><%= i.desc %></td> <!-- display item description -->
        <td><%= i.date %></td> <!-- display item date -->
        <td><%= i.place %></td> <!-- display item location -->
        <td><%= i.type %></td> <!-- display Lost/Found -->
        <td> <!-- actions cell -->
          <a href="/items/<%= i.id %>/edit" class="edit-btn">Edit</a> <!-- link to edit form for this item -->
          <form action="/items/<%= i.id %>?_method=DELETE" method="post" style="display:inline"> <!-- form that sends a DELETE via method-override -->
            <button type="submit" class="delete-btn">Delete</button> <!-- delete button -->
          </form> <!-- end delete form -->
        </td> <!-- end actions -->
      </tr> <!-- end row -->
    <% }) %> <!-- end EJS loop -->
  </tbody> <!-- end tbody -->
</table> <!-- end table -->
