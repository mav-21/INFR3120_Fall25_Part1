<h2 style="margin-top:0;">All Listings</h2> <!-- page heading -->

<p style="margin-bottom:12px;">
  <a href="/items/new">+ Create Listing</a>
</p> <!-- quick link to creation form -->

<table border="1" cellpadding="6" cellspacing="0" style="width:100%;border-collapse:collapse;"> <!-- table identical to landing -->
  <thead> <!-- header -->
    <tr> <!-- header row -->
      <th>Name</th> <!-- name col -->
      <th>Description</th> <!-- description col -->
      <th>Date</th> <!-- date col -->
      <th>Location</th> <!-- location col -->
      <th>Type</th> <!-- Lost/Found col -->
      <th>Actions</th> <!-- edit/delete col -->
    </tr> <!-- end header row -->
  </thead> <!-- end thead -->
  <tbody> <!-- body -->
    <% items.forEach(i => { %> <!-- loop items -->
      <tr> <!-- row -->
        <td><%= i.name %></td> <!-- show name -->
        <td><%= i.desc %></td> <!-- show description -->
        <td><%= i.date %></td> <!-- show date -->
        <td><%= i.place %></td> <!-- show place -->
        <td><%= i.type %></td> <!-- show type -->
        <td> <!-- actions -->
          <a href="/items/<%= i.id %>/edit">Edit</a> <!-- edit link -->
          <form action="/items/<%= i.id %>?_method=DELETE" method="post" style="display:inline;margin-left:6px;"> <!-- delete form -->
            <button type="submit">Delete</button> <!-- delete button -->
          </form> <!-- end form -->
        </td> <!-- end actions -->
      </tr> <!-- end row -->
    <% }) %> <!-- end loop -->
  </tbody> <!-- end tbody -->
</table> <!-- end table -->
